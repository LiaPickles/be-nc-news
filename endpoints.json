{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an object of specific requested article",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "article": {
        "article_id": 3,
        "title": "Eight pug gifs that remind me of mitch",
        "topic": "mitch",
        "author": "icellusedkars",
        "body": "some gifs",
        "created_at": "2020-11-03T09:12:00.000Z",
        "votes": 0,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "gets all comments for an article with most recent comment displayed first",
    "queries": [],
    "exampleResponse": {
      "comment_id": 22,
      "votes": 3,
      "created_at": "2020-15-03T09:12:00.000Z",
      "author": "icellusedkars",
      "body": "great article",
      "article_id": 2
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "posts a new comment to an article and return the comment",
    "queries": [],
    "exampleResponse": { "comment": "Great article!" }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the votes on an article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "author": "icellusedkars",
        "title": "Z",
        "article_id": 7,
        "topic": "mitch",
        "body": "I was hungry.",
        "created_at": "2020-01-07T14:08:00.000Z",
        "votes": 5,
        "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
      }
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment by comment_id",
    "queries": [],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "serves an array user objects",
    "queries": ["sort_by", "order"],
    "exampleResponse": {
      "users": [
        {
          "username": "butter_bridge",
          "name": "jonny",
          "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
        },
        {
          "username": "icellusedkars",
          "name": "sam",
          "avatar_url": "https://avatars2.githubusercontent.com/u/24604688?s=460&v=4"
        }
      ]
    }
  },
  "GET /api/users/:username": {
    "description": "returns a user by username",
    "queries": [],
    "exampleResponse": {
      "username": "butter_bridge",
      "name": "jonny",
      "avatar_url": "https://www.healthytherapies.com/wp-content/uploads/2016/06/Lime3.jpg"
    }
  }
}
